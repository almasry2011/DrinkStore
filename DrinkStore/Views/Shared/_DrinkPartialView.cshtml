@model Drink
    <div class="thumbnail">
        <h4 class="text-center"><span class="label label-info">@Model.Name</span></h4>
        <img src="@Model.ImageThumbnailUrl  " class="img-responsive">
        <div class="caption">
            <div class="row">
                <div class="col-md-9 col-xs-9">
                    <h4><b>
                            <a asp-action="DrinkDetails" asp-controller="drink" asp-route-id="@Model.DrinkId" >@Model.Name </a>
                </b> </h4>
                </div>
                <div class="col-md-3 col-xs-3 price">
                    <h4>
                        <label>@Model.Price.ToString("c")</label>
                    </h4>
                </div>
            </div>
            <p>@Model.ShortDescription</p>
            <div class="row">
                <div class="col-md-6">
                    <a asp-action="AddPreferredDrinksList" asp-controller="drink" asp-route-id="@Model.DrinkId" class="btn btn-primary btn-product">
                        <span class="glyphicon glyphicon-thumbs-up"></span> Like  </a>
                </div>
                <div class="col-md-6">
                    <a asp-action="AddToCart" asp-controller="cart" asp-route-id="@Model.DrinkId" class="btn btn-success btn-product"><span class="glyphicon glyphicon-shopping-cart"></span> Buy</a>
                </div>
            </div>
            <p> </p>
        </div>
    </div>
 